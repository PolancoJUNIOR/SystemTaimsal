@model SysTaimsal.EL.Report

@{
    ViewData["Title"] = "Create";
}

<h1>Añadir Reporte</h1>

<h4>Reporte</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="IdClient" class="control-label">IdCliente</label>
                <select asp-for="IdClient" class ="form-control" asp-items="ViewBag.IdClient"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IdProduct" class="control-label">IdProducto</label>
                <select asp-for="IdProduct" class ="form-control" asp-items="ViewBag.IdProduct"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IdProvider" class="control-label">IdProveedor</label>
                <select asp-for="IdProvider" class ="form-control" asp-items="ViewBag.IdProvider"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IdMachine" class="control-label">IdMaquinaria</label>
                <select asp-for="IdMachine" class ="form-control" asp-items="ViewBag.IdMachine"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IdUser" class="control-label">IdUsuario</label>
                <select asp-for="IdUser" class ="form-control" asp-items="ViewBag.IdUser"></select>
            </div>
            <div class="form-group mb-3">
                <button type="submit" value="Create" class="btn btn-success">Crear</button> |
                <a type="button" asp-action="Index" class="btn btn-primary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
