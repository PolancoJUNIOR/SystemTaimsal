@model SysTaimsal.EL.Machine

@{
    ViewData["Title"] = "Create";
}

<h1>Añadir Maquinaria</h1>

<h4>Maquinaria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="NameMachine" class="control-label">Nombre de Maquinaria</label>
                <input asp-for="NameMachine" class="form-control" />
                <span asp-validation-for="NameMachine" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImageMachine" class="control-label">Imagen de Maquinaria</label>
                <input asp-for="ImageMachine" type="file" name="FileUpload" id="FileUpload" class="form-control" />
                <span asp-validation-for="ImageMachine" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <button type="submit" value="Create" class="btn btn-success">Crear</button> |
                <a type="button" asp-action="Index" class="btn btn-primary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
