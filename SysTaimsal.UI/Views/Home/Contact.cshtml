@{
    ViewData["Title"] = "Contact";
}

<link rel="stylesheet" href="../css/Taimsal-Acronym.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet@1.7.1/dist/leaflet.css" />

<section class="p-3">
    <div class="row">
        <div class="col-md-6 col-sm-12 p-3">
            <p class="fs-4 text-center">Comentarios</p>
            <div class="card shadow">
                <form class="row g-3 rounded-3 align-content-center p-3">
                    <div class="col-md-6">
                        <label for="nombre"> <i class="bi bi-person-fill"></i> Nombre</label>
                        <input type="text" class="form-control" name="nombre" id="nombre" placeholder="ej: John" required>
                        <div class="nombre text-danger "></div>
                    </div>
                    <div class="col-md-6">
                        <label for="apellido"> <i class="bi bi-person-bounding-box"></i> Apellido</label>
                        <input type="text" class="form-control" name="apellido" id="apellido" placeholder="ej: Smith" required>
                        <div class="apellido text-danger"></div>
                    </div>
                    <div class="col-md-12">
                        <label for="correo"><i class="bi bi-envelope-fill"></i> Correo</label>
                        <input type="email" class="form-control" name="correo" id="correo" placeholder="ej: Johnsmith-2023@gmail.com" required>
                        <div class="correo text-danger"></div>
                    </div>
                    <div class="col-md-12">
                        <label for="mensaje"> <i class="bi bi-chat-right-dots-fill" required></i> Mensaje</label>
                        <textarea name="mensaje" id="mensaje" class="form-control" placeholder="ej: Hola"></textarea>
                        <div class="mensaje text-danger"></div>
                    </div>
                    <div class="mb-2 text-center">
                        <button class="col-5 btn" style="background-color:#083A84;">
                            <span class="text-white">Enviar </span><i id="icono" class="bi bi-cursor-fill text-white"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-6 col-sm-12 p-3">
            <p class="fs-4 text-center">Ubicación</p>
            <div class="card" style="background-color:#D8D8D8">
                <div id="map" style="width: 100%; height: 500px;"></div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/leaflet@1.7.1/dist/leaflet.js"></script>
<script>
    // Crea el mapa con las coordenadas que deseas mostrar.
    var map = L.map('map').setView([13.721382, -89.364498], 13);

    // Agrega la capa de OpenStreetMap al mapa.
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19
    }).addTo(map);

    var myIcon = L.icon({
        iconUrl: '../img/R.png',
        iconSize: [40, 40], // Ancho y alto del icono
        iconAnchor: [15, 50], // Punto de anclaje del icono (la parte inferior del icono)
        popupAnchor: [0, -50] // Punto donde se abrirá el popup en relación al punto del marcador
    });


    // Agrega un marcador en la posición especificada.
    L.marker([13.721382, -89.364498], { icon: myIcon }).addTo(map);

</script>
